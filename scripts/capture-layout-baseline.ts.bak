// 4. ä¿å­˜æ–‡ä»¶
const outputDir = path.join(__dirname, '../docs/widget-registry');
if (!fs.existsSync(outputDir)) {
  fs.mkdirSync(outputDir, { recursive: true });
}

// ä¿å­˜ JSON å¿«ç…§
