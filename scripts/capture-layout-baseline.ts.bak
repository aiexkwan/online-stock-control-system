import { adminDashboardLayouts } from '../app/admin/components/dashboard/adminDashboardLayouts';
import {
  captureAllLayouts,
  generateLayoutReport,
  saveLayoutSnapshot,
  validateLayoutSnapshot,
  captureThemeLayout
} from '../lib/widgets/layout-snapshot';
import fs from 'fs';
import path from 'path';

console.log('ðŸ” Starting layout baseline capture...\n');

// 1. æ•ç²æ‰€æœ‰å¸ƒå±€
console.log('ðŸ“¸ Capturing all layouts...');
const snapshots = captureAllLayouts(adminDashboardLayouts);

// 2. é©—è­‰æ¯å€‹å¸ƒå±€çš„è½‰æ›
console.log('\nâœ… Validating conversions...');
let allValid = true;

Object.entries(adminDashboardLayouts).forEach(([theme, layout]) => {
  const converted = snapshots[theme as string];
  const isValid = validateLayoutSnapshot(layout, converted);

  console.log(`  ${theme}: ${isValid ? 'âœ…' : 'âŒ'} (${layout.widgets.length} widgets)`);

  if (!isValid) {
    allValid = false;
  }
});

if (!allValid) {
  console.error('\nâŒ Some layouts failed validation!');
  process.exit(1);
}

// 3. ç”Ÿæˆå ±å‘Š
console.log('\nðŸ“Š Generating layout report...');
