{
  "extends": ["next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "import", "react-hooks"],
  "rules": {
    // TypeScript specific rules
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/prefer-as-const": "error",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],

    // React hooks rules with better configuration
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    // Import rules for better organization
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "internal",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"]
      }
    ],
    "import/no-anonymous-default-export": "error",
    "import/no-duplicates": "warn",

    // Stricter TypeScript rules for production code
    "@typescript-eslint/no-unsafe-any": "off", // Too strict for existing codebase
    "@typescript-eslint/no-unsafe-member-access": "off",
    "@typescript-eslint/no-unsafe-assignment": "off",

    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@/types",
            "message": "請使用直接路徑導入：@/types/database/* 或 @/lib/types/*"
          },
          {
            "name": "@/types/index",
            "message": "請使用直接路徑導入：@/types/database/* 或 @/lib/types/*"
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "react-hooks/exhaustive-deps": "off"
      }
    },
    {
      "files": [
        "types/generated/**/*.ts",
        "**/*.d.ts",
        "**/vitest.setup.ts",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "**/**/handlers.ts",
        "lib/types/unknown-handlers.ts",
        "types/database/helpers.ts",
        "lib/graphql/resolvers/**/*.ts",
        "lib/graphql/utils/**/*.ts",
        "scripts/**/*.ts",
        "supabase/functions/**/*.ts",
        "lib/database/**/*.ts",
        "lib/monitoring/**/*.ts",
        "lib/security/**/*.ts",
        "lib/services/**/*.ts",
        "lib/examples/**/*.tsx",
        "**/*.example.ts",
        "**/*.example.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": [
        "**/compound/**/*.ts",
        "**/compound/**/*.tsx",
        "app/(auth)/**/*.ts",
        "app/(auth)/**/*.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    },
    {
      "files": [
        "**/hooks/**/*.ts",
        "**/hooks/**/*.tsx"
      ],
      "rules": {
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  ]
}
