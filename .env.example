# MCP Server Configuration
HOST=0.0.0.0
PORT=8051
TRANSPORT=sse

# OpenAI API Configuration
# SECURITY: Set via environment variables only
OPENAI_API_KEY=your-openai-api-key-here

# LLM for summaries and contextual embeddings
MODEL_CHOICE=gpt-4o-turbo

# RAG Strategies
USE_CONTEXTUAL_EMBEDDINGS=true
USE_HYBRID_SEARCH=true
USE_AGENTIC_RAG=true
USE_RERANKING=true

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_URL=https://your-project.supabase.co

# SECURITY: These keys should be set via secure environment variables
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# SECURITY: Never commit service role key - set via environment variables only
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# SECURITY: Never commit access token
SUPABASE_ACCESS_TOKEN=your-access-token-here

# Email Service Configuration
# SECURITY: Set via environment variables only
RESEND_API_KEY=your-resend-api-key-here

# Cache Configuration
CACHE_TYPE=apollo
NODE_ENV=development

# Security Mode Configuration
NEXT_PUBLIC_SECURITY_MODE=strict

# Middleware Authentication Configuration
ENABLE_DETAILED_PERMISSION_CHECK=true
ENABLE_ROUTE_PREFETCH=true

# SECURITY: Never commit test credentials
TEST_SYS_LOGIN=test-email@example.com
TEST_SYS_PASSWORD=test-password-here